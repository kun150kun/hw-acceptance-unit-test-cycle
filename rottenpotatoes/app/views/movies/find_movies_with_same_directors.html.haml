-# in app/views/movies/movies_with_same_directors.html.haml

%h3 Movies with Same Director of #{@movie.title}

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{:class => @title_header}= link_to 'Movie Title', movies_path(:sort => 'title', :ratings => @selected_ratings), :id => 'title_header'
      %th Rating
      %th{:class => @date_header}= link_to 'Release Date', movies_path(:sort => 'release_date', :ratings => @selected_ratings), :id => 'release_date_header'
      %th Directors
      %th More Info
  %tbody
    - @movies_with_same_directors.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= movie.director
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to "Back to details of #{@movie.title}", movie_path(@movie)